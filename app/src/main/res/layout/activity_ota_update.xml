<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg">

    <RelativeLayout android:id="@+id/rlTitle"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/black">

        <ImageView android:id="@+id/imgBack"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/left_r"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"/>

        <TextView android:id="@+id/tvName"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="OTA 升级"
            android:textSize="20sp"
            android:textStyle="bold"
            android:ellipsize="middle"
            android:textColor="@color/white"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:layout_toLeftOf="@id/tvMTU"
            android:layout_toRightOf="@id/imgBack"/>

        <TextView android:id="@+id/tvMTU"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="MTU*20"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>

    <ScrollView android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rlTitle"
        android:layout_above="@+id/llBottom">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp">

            <TextView android:id="@+id/tvLog"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/white"
                android:paddingBottom="20dp"/>

        </LinearLayout>

    </ScrollView>

    <LinearLayout android:id="@+id/llBottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/help_view"
            android:padding="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Server:"
                android:textColor="@color/white"/>
            <TextView android:id="@+id/tvServer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="123456789136456789"
                android:textColor="@color/white"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Write:"
                android:textColor="@color/white"/>
            <TextView android:id="@+id/tvWrite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="123456789136456789"
                android:textColor="@color/white"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Read:"
                android:textColor="@color/white"/>
            <TextView android:id="@+id/tvRead"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="123456789136456789"
                android:textColor="@color/white"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView android:id="@+id/tvFilePath"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:paddingLeft="10dp"
                android:text="请选择 bin 文件"
                android:layout_margin="5dp"
                android:gravity="center_vertical"
                android:background="@drawable/bg_button_number_select"/>

            <Button android:id="@+id/btnUpdate"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:text="开始升级"/>

        </LinearLayout>

    </LinearLayout>





</RelativeLayout>
